
@{
    ViewBag.Title = "Index";
}

@model List<Employee>
<br/>
@Html.ActionLink("+ Add New Employee", "Registration", "Home", null, new { @class = "btn btn-primary"})
<br/>
<br/>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Salary</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
        </tr>
        </thead>
        <tbody>
            @foreach (Employee e in Model)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Gender</td>
                    <td>@e.Salary
                    <td>@e.Email</td>
                    <td>@e.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger"> NO EMPLOYEES EXIST</div>
}
